@model List< MVC_TicariOtomasyon.Models.Entities.SalesMovement>

@{
    ViewBag.Title = "DetailCustomer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table  table-hover">

    <thead>
        <tr>
            <th style="width: 10px">#</th>
            <th>Ürün Adı</th>
            <th>Adet</th>
            <th>Satış Fiyatı</th>
            <th>Toplam Fiyat</th>   
            <th>Tarih</th>
            <th>Yazdır</th>

        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Piece</td>
                <td>@item.Price</td>
                <td>@item.Amount</td>
                <td>@item.Date.ToShortDateString() </td>
                <td><a href="" class="btn btn-default" style="background-color:cornflowerblue">Yazdır</a> </td>
            </tr>
        }
    </tbody>
</table>


