@model MVC_TicariOtomasyon.Models.Entities.Customer
@{
    ViewBag.Title = "UpdateCustomer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post">

    @Html.HiddenFor(x => x.CustomerId)

    <label>Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
    <br />
    <label>Soyadı</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Surname, "", new { @style = "color:red" })
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <label>Durum</label>
    @Html.DropDownListFor(model => model.Status, new SelectList(new string[] { "True", "False" }), new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Müşteri Bilgisini Güncelle</button>
</form>


