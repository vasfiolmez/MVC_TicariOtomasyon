@model List<MVC_TicariOtomasyon.Models.Entities.Customer>
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 10px">#</th>
            <th>Müşteri Adı</th>
            <th>Şehir</th>
            <th>Email</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name @item.Surname</td>
                <td>@item.City </td>
                <td>@item.Mail </td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == true)
                    {
                        <a href="/Admin/Customer/CustomerChangeToStatusFalse/@item.CustomerId" class="btn btn-default" style="background-color:black papayawhip">Pasif Yap</a>
                    }
                    else
                    {
                        <a href="/Admin/Customer/CustomerChangeToStatusTrue/@item.CustomerId" class="btn btn-success">Aktif Yap</a>
                    }

                    <a href="/Admin/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-warning">Güncelle</a>
                    <a href="/Admin/Customer/DetailCustomer/@item.CustomerId" class="btn btn-outline-primary">Satın Aldıkları</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Admin/Customer/CreateCustomer/" class="btn btn-primary">Yeni Müşteri Oluştur</a>

