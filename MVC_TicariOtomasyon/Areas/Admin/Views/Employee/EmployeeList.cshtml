@model List<MVC_TicariOtomasyon.Models.Entities.Employee>
@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 10px">#</th>
            <th>Personel Adı</th>
            <th>Görsel</th>
            <th>Departmanı</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td> @count</td>
                <td>@item.Name @item.Surname</td>
                <td><img src=" @item.Image" width="100px" height="100px" class="img img-rounded" /></td>
                <td>@item.Department.DepartmentName</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == true)
                    {
                        <a href="/Admin/Employee/EmployeeStatusToChangeFalse/@item.EmployeeId" class="btn btn-dark">Pasif Yap</a>
                    }
                    else
                    {
                        <a href="/Admin/Employee/EmployeeStatusToChangeTrue/@item.EmployeeId" class="btn btn-outline-success">Aktif Yap</a>
                    }
                    <a href="/Admin/Employee/UpdateEmployee/@item.EmployeeId" class="btn btn-warning">Güncelle</a>
                    <a href="/Admin/Employee/DetailEmployee/@item.EmployeeId" class="btn btn-info">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Admin/Employee/CreateEmployee/" class="btn btn-primary">Yeni Personel Oluştur</a>


