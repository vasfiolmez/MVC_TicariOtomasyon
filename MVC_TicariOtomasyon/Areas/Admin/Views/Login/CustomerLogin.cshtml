
@{
    ViewBag.Title = "CustomerLogin";
    Layout = "~/Areas/Admin/Views/Login/Index.cshtml";
}

<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/login-form-06/images/pexels-photo-6969654.jpeg'); "></div>
    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <div class="mb-4">
                        <h3>Online Ticari Otomasyon Müşteri Girişi</h3>
                        <p class="mb-4"></p>
                    </div>

                    <form action="#" method="post">
                        <div class="form-group first">
                            <label for="username">Mail Adresiniz</label>
                            <input type="text" class="form-control" id="username">

                        </div>
                        <div class="form-group last mb-3">
                            <label for="password">Şifre</label>
                            <input type="password" class="form-control" id="password">

                        </div>

                        <div class="d-flex mb-5 align-items-center">
                            <label class="control control--checkbox mb-0">
                                <span class="caption">Beni Hatırla</span>
                                <input type="checkbox" checked="checked" />
                                <div class="control__indicator"></div>
                            </label>
                            <span class="ml-auto"><a href="#" class="forgot-pass">Şifremi Unuttum</a></span>
                        </div>

                        <input type="submit" value="Giriş Yap" class="btn btn-block btn-primary">

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



