@model List< MVC_TicariOtomasyon.Models.Entities.SalesMovement>
@{
    ViewBag.Title = "DetailSalesMovement";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-hover">

    <thead>
        <tr>
            <th style="width: 10px">#</th>
            <th>Ürün Adı</th>
            <th>Adet</th>
            <th>Satış Fiyatı</th>
            <th>Toplam Fiyat</th>

            <th>Müşteri</th>
            <th>Personel</th>
            <th>Tarih</th>
          

        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Product.Brand @item.Product.ProductName</td>
                <td>@item.Piece</td>
                <td>@item.Price</td>
                <td>@item.Amount</td>

                <td>@item.Customer.Name @item.Customer.Surname</td>
                <td>@item.Employee.Name @item.Employee.Surname</td>
                <td>@item.Date.ToShortDateString() </td>
                
            </tr>
        }
    </tbody>
</table>
<br />
<button class="btn btn-default" style="background-color:greenyellow">Yazdır</button>

