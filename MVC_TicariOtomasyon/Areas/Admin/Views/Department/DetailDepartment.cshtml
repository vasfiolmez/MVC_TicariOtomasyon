@model List<MVC_TicariOtomasyon.Models.Entities.Employee>
@{
    ViewBag.Title = "DetailDepartman";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th style="width: 10px">#</th>
            <th>Çalışan Adı</th>
            <th>Resmi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name  @item.Surname</td>
                <td>@item.Image</td>
                <td>
                    <a href="/Admin/Department/EmployeeDepartmentSales/@item.EmployeeId" class="btn btn-default" style="background-color:cadetblue"  >Satış Detayı</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>


