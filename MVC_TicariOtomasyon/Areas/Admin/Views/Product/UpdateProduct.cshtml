@model MVC_TicariOtomasyon.Models.Entities.Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post">

    @Html.HiddenFor(x => x.ProductId)

    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    <label>Marka Adı</label>
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    <label>Stok Durumu</label>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <label>Alış Fiyatı</label>
    @Html.TextBoxFor(x => x.BuyingPrice, new { @class = "form-control" })
    <br />
    <label>Satış Fiyatı</label>
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categoryName, new { @class = "form-control" })
    <br />

    <label>Durum</label>
    @Html.DropDownListFor(model => model.Status, new SelectList(new string[] {"True", "False"}), new { @class = "form-control" })
    <br />

    <label>Ürün Görseli</label>
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Ürün bilgisini güncelle</button>
</form>

