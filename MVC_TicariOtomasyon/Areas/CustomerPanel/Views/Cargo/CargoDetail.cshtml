@model List<MVC_TicariOtomasyon.Models.Entities.CargoTracking>

@{
    ViewBag.Title = "CargoDetail";
    Layout = "~/Areas/CustomerPanel/Views/CustomerLayout/Index.cshtml";
    int sayi = 0;
}

<div class="bg-dark text-white p-3 rounded">
    Kargo Takip Numarası: @ViewBag.code
</div>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Tarih</th>
    </tr>
    @foreach (var item in Model)
    {
        sayi++;
        <tr>
            <td>@sayi</td>
            <td>@item.Description</td>
            <td>@item.DateTime.ToShortDateString()</td>
        </tr>
    }
</table>



