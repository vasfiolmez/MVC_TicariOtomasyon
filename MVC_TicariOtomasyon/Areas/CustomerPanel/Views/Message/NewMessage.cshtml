@model MVC_TicariOtomasyon.Models.Entities.Message
@{ 
    ViewBag.Title = "NewMessage";
    Layout = "~/Areas/CustomerPanel/Views/CustomerLayout/Index.cshtml";
}

<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>AdminLTE 3 | Compose Message</title>

    <!-- Tell the browser to be responsive to screen width -->

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->

    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Theme style -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">

    <!-- summernote -->

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">

    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini">

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                @Html.Action("MessageColmd3", "Message", new { Area = "CustomerPanel" })

                <div class="col-md-9">

                    <div class="card card-primary card-outline">

                        <div class="card-header">

                            <h3 class="card-title">Yeni Mesaj</h3>

                        </div>

                        <form class=" form-group" method="post">

                            <div class="card-body">

                                <div class="form-group">

                                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control", placeholder = "Alıcı:" })                                 

                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Konu:" })
                                    
                                </div>

                                <div class="form-group">

                                    @Html.TextAreaFor(x=>x.Subject,1,6, new {@class="form-control", id = "compose-textarea", style = "height: 300px" })
              
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>

                                </div>


                        </form>

                        @*<div class="form-group">

                            <div class="btn btn-default btn-file">

                                <i class="fas fa-paperclip"></i> Dosya Seç

                                <input type="file" name="attachment">

                            </div>

                            <p class="help-block">Max. 32MB</p>

                        </div>*@

                    </div>

                    <!-- /.card-body -->

                    <div class="card-footer">

                        <div class="float-right">

                            <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Sil</button>

                            

                        </div>

                        <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>

                    </div>

                </div>


            </div>

        </div>

        </div>

    </section>


    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>


    <script src="~/AdminLTE-3.0.4/bootstrap/js/bootstrap.bundle.min.js"></script>


    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>



    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>


    <script>
        $(function () {

            //Add text editor

            $('#compose-textarea').summernote()

        })</script>

</body>

</html>



