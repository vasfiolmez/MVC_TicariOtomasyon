
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@Html.Action("PartialHead", "CustomerLayout", "CustomerPanel")

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
    
        @Html.Action("PartialNavbar", "CustomerLayout", "CustomerPanel")

        @Html.Action("PartialAside", "CustomerLayout", "CustomerPanel")

        <div class="content-wrapper">

            <br />

            <section class="content">
                <div class="container-fluid">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">@ViewBag.baslik</h3>
                            </div>
                            <div class="card-body" style="display: block;">
                                @RenderBody()
                            </div>
                            
                        </div>
                       
                    </div>
                </div>
            </section>
           
        </div>
      
        @Html.Action("PartialFooter", "CustomerLayout", "CustomerPanel")

  
        <aside class="control-sidebar control-sidebar-dark">
         
        </aside>
       
    </div>
    @Html.Action("PartialScript", "CustomerLayout", "CustomerPanel")
</body>
</html>
