@model MVC_TicariOtomasyon.Models.Entities.Customer
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CustomerPanel/Views/CustomerLayout/Index.cshtml";
}

<!DOCTYPE html>

<html>




<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        <section class="content">

            <div class="container-fluid">

                <div class="row">

                    <div class="col-md-3">


                        <div class="card card-primary card-outline">

                            <div class="card-body box-profile">

                                <div class="text-center">

                                    <img class="profile-user-img img-fluid img-circle"
                                         src="~/AdminLTE-3.0.4/dist/img/user4-128x128.jpg"
                                         alt="User profile picture">

                                </div>

                                <h3 class="profile-username text-center">@Model.Name @Model.Surname</h3>

                                <p class="text-muted text-center">@Model.Mail</p>

                                <ul class="list-group list-group-unbordered mb-3">

                                    <li class="list-group-item">

                                        <b>Toplam Satış :</b> <a class="float-right">@ViewBag.toplamsatis</a>

                                    </li>

                                    <li class="list-group-item">

                                        <b>Toplam Satış Tutarı :</b> <a class="float-right">@ViewBag.toplamTutar</a>

                                    </li>

                                    <li class="list-group-item">

                                        <b>Toplam Ürün Sayısı :</b> <a class="float-right">@ViewBag.toplamUrunSayisi</a>

                                    </li>

                                </ul>

                                <a href="/CustomerPanel/Cargo/Index" class="btn btn-primary btn-block"><b>Kargo Takip</b></a>

                            </div>

                        </div>

                        <div class="card card-primary">

                            <div class="card-header">

                                <h3 class="card-title">Hakkında</h3>

                            </div>

                            <div class="card-body">

                                <strong><i class="fas fa-book mr-1"></i> Meslek</strong>

                                <p class="text-muted">

                                    Yazılım mühendisi

                                </p>

                                <hr>

                                <strong><i class="fas fa-map-marker-alt mr-1"></i> Şehir</strong>

                                <p class="text-muted">@Model.City</p>

                                <hr>

                                <strong><i class="fas fa-pencil-alt mr-1"></i> Telefon</strong>

                                <p class="text-muted">

                                    <span class="tag tag-danger">(000-000-000)</span>

                                </p>

                                <hr>

                                <strong><i class="far fa-file-alt mr-1"></i> Duyurular</strong>

                                <p class="text-muted">Yeni Ürünlerimiz İçin web sitemizi ziyaret edin.</p>

                            </div>

                        </div>

                    </div>

                    <div class="col-md-9">

                        <div class="card">

                            <div class="card-header p-2">

                                <ul class="nav nav-pills">

                                    <li class="nav-item"><a class="nav-link active" href="#messages" data-toggle="tab">Mesajlar</a></li>

                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Duyurular</a></li>

                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Ayarlar</a></li>

                                </ul>

                            </div>

                            <div class="card-body">

                                <div class="tab-content">

                                    @Html.Action("Messages", "Default", new { Area = "CustomerPanel" })

                                    <!-- /.tab-pane -->

                                    @Html.Action("Duyuru", "Default", new { Area = "CustomerPanel" })

                                    <!-- /.tab-pane -->

                                    @Html.Action("Settings", "Default", new { Area = "CustomerPanel" })

                                    <!-- /.tab-pane -->

                                </div>

                                <!-- /.tab-content -->

                            </div><!-- /.card-body -->

                        </div>

                        <!-- /.nav-tabs-custom -->

                    </div>

                    <!-- /.col -->

                </div>

                <!-- /.row -->

            </div><!-- /.container-fluid -->

        </section>

        <!-- /.content -->

    </div>

</body>

</html>

